<h1><%= @work.title %></h1>

<%= image_tag @work.image, :class => 'feature', :alt => @work.title %>

<ul>
  <li>Title: <%= @work.title %></li>
  <% if @work.artist.present? %>
    <li><%= link_to @work.artist.name, @work.artist %></li>
  <% end %>
  <li>Year: <%= @work.year %></li>
  <li>Medium: <%= @work.medium %></li>
  <li>Style: <%= @work.style %></li>
</ul>

<%= button_to "Edit work", edit_work_path, :method => 'get' %>
<%= button_to "Delete work", @work, :method => 'delete' %>
