<h1>All Artists</h1>

<% @artists.each do |artist| %>
  <%= image_tag artist.image, :class => 'thumb', :alt => artist.name if artist.image.present? %>
  <ul>
    <li>Name: <%= link_to artist.name, artist %></li>
    <li>Nationality: <%= artist.nationality %></li>
    <li>Date of birth: <%= artist.dob.strftime '%A, %B %e, %Y' if artist.dob.present? %></li>
    <li>Period: <%= artist.period %></li>
  </ul>
<% end %>
