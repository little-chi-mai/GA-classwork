<h1>Edit Butterfly</h1>

<form action="/butterflies/<%= @butterfly['id'] %>" method='post'>
  <label>
    Name:
    <input name="name" value="<%= @butterfly["name"] %>" required>
  </label>

  <label>
    Family:
    <input name="family" placeholder="Nymphalidae" value="<%= @butterfly['family'] %>">
  </label>

  <label>
    Image:
    <input type="url" name="image" value="<%= @butterfly["image"] %>" placeholder="http://...">
  </label>

  <button>Edit butterfly</button>
</form>
